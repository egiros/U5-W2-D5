@model U5_W2_D5.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="login rounded my-5">
    <h1 class="text-center">EPIC HOTEL</h1>

    <h4 class="text-center my-5">Accedi con i tuoi dati di registrazione</h4>
    <hr />
    <div class="row my-5">
        <div class="col-md-4 mx-auto my-3 rounded login2 bg-opacity">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <p class="text-danger">@TempData["Error"]</p>
                <div class="form-group text-center my-5">
                    <input type="submit" value="Accedi" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-outline-primary">Home</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
